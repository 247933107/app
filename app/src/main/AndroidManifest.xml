<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.joker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainNewActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.DetailActivity" />
        <activity android:name=".activity.DActivity"></activity>
        <activity android:name=".activity.UrlActivity"></activity>
        <activity android:name=".activity.NewsActivity"
            android:theme="@style/Theme.PageIndicatorDefaults"></activity>
        <activity
            android:name=".activity.JokerActivity"
            android:theme="@style/Theme.PageIndicatorDefaults"></activity>
        <activity
            android:name=".activity.TrainActivity"
            android:theme="@style/Theme.PageIndicatorDefaults"></activity>
        <activity
            android:name=".activity.ChatActivity"
            android:windowSoftInputMode="stateVisible|adjustResize"></activity>
        <activity android:name="com.example.tt.MaActivity"></activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
</manifest>
